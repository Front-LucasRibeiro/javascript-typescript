{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext", // ultima vers√£o do typescript
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // others configs add
    "removeComments": true,
    // "rootDirs": [] 
  },
  "include": ["src"]
}
